{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'contacts'|trans }}{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-users-cog text-danger"></i> {{ 'contacts'|trans }}
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_contact_new') }}">
                <i class="fas fa-plus-square text-danger"></i> {{ 'label.create_contact' | trans }}
            </a>
        </li>
    </ul>

    <div class="card mb-3">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th class="hidden-sm">{{ 'table.fullname' | trans }}</th>
                        <th>{{ 'table.telefon' | trans }}</th>
                        <th>{{ 'table.email' | trans }}</th>
                        <th>{{ 'table.date' | trans }}</th>
                        <th>{{ 'table.status' | trans }}</th>
                        <th>{{ 'table.action' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for contact in contacts %}
                        <tr>
                            <td class="hidden-sm">{{ contact.fullname }}</td>
                            <td>{{ contact.telefon }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ contact.state | trans }}</td>
                            <td>
                                {{ include('admin/contact/_action_form.html.twig', {contact: contact}, with_context = false) }}
                            </td>
                        </tr>

                    {% else %}
                        <div class="well">Nothing</div>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

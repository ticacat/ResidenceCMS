{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'title.add_contact' | trans }}{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_contact') }}">
                <i class="fas fa-users-cog text-danger"></i> {{ 'contacts'|trans }}
            </a>
        </li>
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-plus-square text-danger"></i> {{ 'label.create_contact' | trans }}
            </span>
        </li>
    </ul>

    <div class="card mb-3">

        <div class="card-body">

            {% form_theme form 'bootstrap_4_layout.html.twig' %}

            {{ form_start(form) }}
                {{ form_row(form.fullname) }}
                {{ form_row(form.telefon) }}
                {{ form_row(form.email) }}
                {{ form_row(form.content) }}

            <div class="form-group">

                <button type="submit" class="btn btn-primary">
                    {{ 'label.create_contact' | trans }}
                </button>

                {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}

            </div>

            {{ form_end(form) }}

        </div>
    </div><br>

{% endblock %}

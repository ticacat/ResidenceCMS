
<div class="">
    <div class="container">
        <form class="row" action="{{ path(app.request.attributes.get('_route') == 'property_premium' ?'property_premium':'property') }}" method="get">

            {% if site.show_filter_by_deal_type == '1' %}

                <div class="col-lg-3 mb-2">
                    <div class="select-wrap">
                        <span class="icon icon-arrow_drop_down"></span>
                        <select name="offer-types" id="offer-types" class="form-control d-block rounded-0" aria-label="{{ 'deal_type'|trans }}">

                            aria-label="{{ 'deal_type'|trans }}">
                            <option value="0">{{ 'deal_type'|trans }}</option>

                                {% for deal_type in site.deal_types %}

                                    <option value="{{ deal_type.id }}"
                                        {% if searchParams is defined and  searchParams.deal_type == deal_type.id %} selected{% endif %}
                                    >
                                        {{ deal_type.name }}
                                    </option>

                                {% endfor %}

                    </select>
                 </div>
                </div>
            {% endif %}




            {% if site.show_filter_by_city == '1' %}


                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="select-wrap">
                        <span class="icon icon-arrow_drop_down"></span>
                        <select name="city" id="cities" class="form-control d-block rounded-0" aria-label="{{ 'city'|trans }}">
                            <option value="0">{{ 'city'|trans }}</option>s
                            {% for city in site.cities %}

                                <option value="{{ city.id }}"
                                    {% if searchParams is defined and searchParams.city == city.id %} selected{% endif %}>
                                    {{ city.name }}
                                </option>

                            {% endfor %}
                        </select>
                    </div>
                </div>
            {% endif %}


            {% if site.show_filter_by_category == '1' %}

            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="select-wrap">
                    <span class="icon icon-arrow_drop_down"></span>
                    <select name="category" id="category" class="form-control d-block rounded-0"
                            aria-label="{{ 'category'|trans }}">
                        <option value="0">{{ 'category'|trans }}</option>

                        {% for category in site.categories %}

                            <option value="{{ category.id }}"
                                {% if searchParams is defined and searchParams.category == category.id %} selected{% endif %}
                            >{{ category.name }}
                            </option>

                        {% endfor %}

                    </select>
                </div>
            </div>
            {% endif %}



            {% if site.show_filter_by_bedrooms == '1' %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="select-wrap">
                    <span class="icon icon-arrow_drop_down"></span>
                    <select name="bedrooms" class="form-control d-block rounded-0"
                            aria-label="{{ 'label.bedrooms_number'|trans }}">
                        <option value="0">{{ 'property.bedrooms'|trans }}</option>
                        <option value="0">{{ 'option.any'|trans }}</option>
                        <option value="1" {% if searchParams is defined and searchParams.bedrooms == 1 %} selected{% endif %}>
                            1 {{ 'option.bedroom'|trans }}
                        </option>
                        <option value="2" {% if searchParams is defined and  searchParams.bedrooms == 2 %} selected{% endif %}>
                            2 {{ 'option.bedrooms'|trans }}
                        </option>
                        <option value="3" {% if searchParams is defined and  searchParams.bedrooms == 3 %} selected{% endif %}>
                            3 {{ 'option.bedrooms'|trans }}
                        </option>
                        <option value="4" {% if searchParams is defined and  searchParams.bedrooms == 4 %} selected{% endif %}>
                            4+ {{ 'option.bedrooms'|trans }}
                        </option>
                    </select>
                </div>
            </div>
            {% endif %}

            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="mb-0">
                    <div id="slider-range" class="border-primary"></div>
                    <input type="text" name="range_price" id="amount"  class=" form-control border-0 pl-0 bg-white" value="{{ (searchParams is defined and  searchParams.range_price)?searchParams.range_price: '0-100000000' }}"/>
                </div>
            </div>


            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <input type="submit" class="btn btn-primary btn-block form-control-same-height rounded-0 " value="Search">
            </div>

        </form>

    </div>
</div>



